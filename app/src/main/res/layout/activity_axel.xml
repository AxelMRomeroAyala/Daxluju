<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".axel.AxelActivity">

    <ImageView
        android:id="@+id/axel_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/axel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:text="AXEL"/>

    <Button
        android:id="@+id/axel_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="EDITAR"/>

    <Button
        android:id="@+id/axel_editar_2"
        android:layout_width="wrap_content"
        android:layout_below="@id/axel_editar"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Load Random From Internet"/>

    <Button
        android:id="@+id/axel_map"
        android:layout_width="wrap_content"
        android:layout_below="@id/axel_editar_2"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Open Map"/>

    <Button
        android:id="@+id/axel_pixel_grid"
        android:layout_width="wrap_content"
        android:layout_below="@id/axel_map"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Open Pixel Grid"/>

</RelativeLayout>