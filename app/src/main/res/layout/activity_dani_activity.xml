<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaniActivity">

    <TextView
        android:id="@+id/dani_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:text="Dani"/>

    <ImageView
        android:id="@+id/glideImg"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
    />

    <Button
        android:id="@+id/dani_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="EDITAR"/>

    <Button
        android:id="@+id/dani_saludo"
        android:layout_width="wrap_content"
        android:layout_below="@+id/dani_editar"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Saludar"/>

    <Button
        android:id="@+id/dani_perro"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/dani_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perro"
        />

    <Button
        android:id="@+id/glid"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambio img"
        />

    <Button
        android:id="@+id/recycleView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dani_saludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recycle"
        />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher_foreground"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher_foreground"/>

</RelativeLayout>
